<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.babarmustafa.sixkalmaapp.AboutMe">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pic"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        android:layout_gravity="center"
        app:civ_shadow_radius="0"
        app:civ_shadow_color="#8BC34A"
        android:id="@+id/cirular"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cirular"
                android:layout_marginTop="10dp"
                android:id="@+id/forname"
                android:gravity="center_horizontal"
                android:text="Six Kalma App"
                android:textSize="40dp"
                android:fontFamily="cursive"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forname"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:id="@+id/deve"
                android:textSize="25dp"
                android:text="Developded BY\nBabar Mustafa Awan"/>

            <LinearLayout
                android:layout_below="@+id/deve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/first">

                <com.github.siyamed.shapeimageview.BubbleImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/github"
                    app:siArrowPosition="right"
                    android:layout_marginLeft="15dp"
                    app:siSquare="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="https://github.com/babar-mustafa"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_below="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/sewcond">

                <com.github.siyamed.shapeimageview.BubbleImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/fb"
                    app:siArrowPosition="right"
                    android:layout_marginLeft="15dp"
                    app:siSquare="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="babarmustafa.awan"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_below="@+id/sewcond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.github.siyamed.shapeimageview.BubbleImageView


                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gmail"
                    app:siArrowPosition="right"

                    android:layout_marginLeft="15dp"
                    app:siSquare="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="babarmustafaawan@gmail.com"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
</ScrollView>